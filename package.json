{
  "name": "books",
  "version": "1.0.0",
  "description": "AngularJS book library",
  "author": "Alejandro Garcia Anglada <aganglada@gmail.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:aganglada/books.git"
  },
  "engines": {
    "node": ">=4.2.1",
    "npm": "~3.10.7"
  },
  "dependencies": {
    "angular": "1.5.8",
    "angular-mocks": "1.5.8",
    "angular-ui-router": "0.3.1",
    "autoprefixer": "6.4.0",
    "babel-core": "6.13.2",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.2.4",
    "babel-plugin-istanbul": "1.0.3",
    "babel-plugin-transform-runtime": "6.12.0",
    "babel-preset-es2015": "6.13.2",
    "babel-runtime": "6.11.6",
    "chokidar-cli": "1.2.0",
    "chunk-manifest-webpack-plugin": "0.1.0",
    "clean-css": "3.4.19",
    "css-loader": "0.23.1",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "html-minify-loader": "1.1.0",
    "html-webpack-plugin": "2.22.0",
    "jasmine-core": "2.4.1",
    "json-server": "0.8.23",
    "karma": "1.2.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.0.2",
    "karma-phantomjs-launcher": "1.0.1",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "1.8.0",
    "moment": "2.15.2",
    "ng-annotate-webpack-plugin": "0.1.3",
    "node-libs-browser": "1.0.0",
    "node-sass": "3.8.0",
    "null-loader": "0.1.1",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-prebuilt": "2.1.11",
    "postcss-cli": "2.5.2",
    "postcss-loader": "0.9.1",
    "postcss-url": "5.1.2",
    "raw-loader": "0.5.1",
    "resolve-url-loader": "1.6.0",
    "style-loader": "0.13.1",
    "uncss": "0.14.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.1",
    "webpack-manifest-plugin": "1.0.1"
  },
  "devDependencies": {
    "eslint": "3.2.2",
    "eslint-plugin-angular": "1.3.1",
    "lcov-summary": "1.0.1",
    "webpack-dev-server": "1.14.1"
  },
  "bin": {
    "chokidar": "node_modules/.bin/chokidar",
    "eslint": "node_modules/.bin/eslint",
    "karma": "node_modules/.bin/karma",
    "node-sass": "node_modules/.bin/node-sass",
    "phantomjs": "node_modules/.bin/phantomjs",
    "webpack": "node_modules/.bin/webpack",
    "webpack-dev-server": "node_modules/.bin/webpack-dev-server",
    "lcov-summary": "node_modules/.bin/lcov-summary",
    "json-server": "node_modules/.bin/json-server"
  },
  "scripts": {
    "api": "json-server --watch ./api/books.json",
    "deploy": "export NODE_ENV=production npm run sass:production && npm run postcss && webpack --bail --profile",
    "dev": "npm run sass:dev && npm run postcss && npm run sass:watch | webpack-dev-server --history-api-fallback --content-base .tmp/ --hot --inline --watch-poll",
    "lint": "eslint app",
    "lcov": "lcov-summary coverage/lcov/lcov.info",
    "postcss": "postcss -c postcss.config.json --replace .tmp/app.css",
    "sass": "node-sass --output-style compressed ./app/app.scss",
    "sass:dev": "npm run sass -- --follow --output ./.tmp --source-map true",
    "sass:production": "npm run sass -- --output ./.tmp",
    "sass:watch": "chokidar 'app/**/*.scss' -c 'npm run sass:dev && npm run postcss' --polling",
    "test": "NODE_ENV=test karma start",
    "test:lcov": "NODE_ENV=test-lcov karma start",
    "test:watch": "NODE_ENV=test karma start --auto-watch --no-single-run"
  }
}
